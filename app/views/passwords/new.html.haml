= title _('Account recovery')

%div.six.columns.centered

  = form_tag passwords_path, :id => :recover do

    %div.row
      %div.five.columns
        = label_tag(:email, _('Your account email'), :class => [:right, :inline])
      %div.seven.columns.end
        = text_field_tag(:email, nil, :required => true)

    .actions.right
      = link_to(_('Nevermind, found it...'), login_path, :class => [:button, :small, :radius, :secondary])
      = submit_tag(_('Recover'), :class => [:button, :small, :radius], :id => :submit_recover)
