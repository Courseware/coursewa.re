= title _('Change password for %{name}') % {:name => @user.name}

%div.six.columns.centered

  = form_tag password_path, :method => 'put', :id => :password_update do

    = hidden_field_tag :token, @token

    %div.row
      %div.five.columns
        = label_tag(:password, _('Password'), :class => [:right, :inline])
      %div.seven.columns.end
        = password_field_tag(:password, nil, :required => true)

    %div.row
      %div.five.columns
        = label_tag(:password_confirmation, _('Password confirmation'), :class => [:right, :inline])
      %div.seven.columns.end
        = password_field_tag(:password_confirmation, nil, :required => true)

    .actions.right
      = submit_tag(_('Update'), :class => 'button primary', :id => :submit_password)
