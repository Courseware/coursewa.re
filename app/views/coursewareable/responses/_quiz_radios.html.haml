.quiz-radios.template.question.row
  .twelve.columns.question-content
    %h3
      = question['content']

    - question['options'].each_with_index do |answer, index|
      .row.option
        - option_id = "quiz-%d-%d" % [question_id, index]
        - option_name = "response[quiz][%d][%d][answer]" % [question_id, index]
        .one.columns.option-validation
          %p
            %input{:name => "unique", :type => "radio", :id => option_id, :name => option_name}
        .eleven.columns.option-content
          %p
            %label{:for => option_id}
              = answer['content']

  %hr

