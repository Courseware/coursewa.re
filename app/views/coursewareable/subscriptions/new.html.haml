= title _('Subscribe to a new plan')

#subscribe
  .three.columns
    = form_tag(subscriptions_path) do
      .row
        %h3
          = _('%s plan') % @plans[:free][:slug].capitalize
      .row
        = _('Allowed classrooms: %s') % @plans[:free][:allowed_classrooms]
      .row
        = _('Allowed collaborators: %s') % @plans[:free][:allowed_collaborators]
      .row
        = _('Allowed space: %s') % number_to_human_size(@plans[:free][:allowed_space])
      .row
        %strong
          = _('Price: %s$') % @plans[:free][:cost]
      %script.stripe-button{ 'data-label' => 'Subscribe!',
        'data-name' => _('%s plan - Coursewa.re') % @plans[:free][:slug].capitalize,
        'data-amount' => _('%s') % @plans[:free][:cost],
        'data-description' => 'A month\'s subscription',
        'data-key' => Rails.configuration.stripe[:public_key],
        :src => 'https://checkout.stripe.com/v2/checkout.js'}

