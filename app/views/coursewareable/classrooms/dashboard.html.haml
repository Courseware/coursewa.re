= title [@classroom.title, _('Timeline')].join(' ')

#activities
  .eight.columns

    .announcement
      = form_tag(announce_classroom_path, :id => :announce) do
        = text_area_tag(:announcement, nil, :required => true, :placeholder => _('Post an announcement for this classroom...'))
        .row
          .four.columns
            = submit_tag(_('Publish'), :class => 'button small primary', :id => :submit_announcement)
          .eight.columns
            = check_box_tag(:email_all, nil, false, :class => 'right')
            = label_tag(:email_all, _('Email everyone this announcement to everyone'), :class => 'smaller right')

    - @timeline.each do |event|
      .row
        .two.columns.author.avatar
          = gravatar_image_tag(event.owner.email, :alt => event.owner.name)

        .ten.columns.end.activity
          = render_activity(event, :current_user => current_user)

  = render(:partial => 'sidebar')
