%h3
  = _('%s updated your assignment grade') % @grade.user.name

%p
  != _('Please visit the link below for the details: %s ') % link_to(@grade.assignment.title, @assignment_url)

- unless @grade.comment.blank?
  %p
    = _('%s also left the following feedback:') % @grade.user.name

  %blockquote
    = @grade.comment
