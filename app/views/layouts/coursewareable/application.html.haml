!!! 5
%html
  %head
    %title
      = content_for?(:title) ? yield(:title) : 'Welcome'
      &bull; The Courseware Project

    = favicon_link_tag('/favicon.png', :type => 'image/png')

    %meta{ :charset => 'utf-8' }
    %meta{ 'http-equiv' => 'X-UA-Compatible', :content => 'IE=edge,chrome=1' }
    %meta{ :name => 'viewport', :content => 'width=device-width' }
    %meta{ :name => :generator, :content => 'Coursewa.re' }

    /[if lt IE 9]
      %script{ :src => 'http://html5shiv.googlecode.com/svn/trunk/html5.js' }

    = stylesheet_link_tag 'application'
    = javascript_include_tag 'application'
    = yield(:head_embed) if content_for?(:head_embed)
    = csrf_meta_tags

  %body
    %header{:role => :banner}
      %nav{:role => :navigation}
        = render('shared/topbar')
      #heading
        %h2
          = yield(:title)

    .wrap
      %section#content{:role => :main}
        %div.row{ :id => "#{controller.action_name}-#{controller.controller_name}"}
          = render('shared/alerts')
          = yield

    %footer{:role => :contentinfo}
      %div.row
        .six.columns
          %p
            = _('Please let us know')
            = link_to(_('what you think.'), '#')
          %p
            = link_to(_('The Team'), '#')
            &bull;
            = link_to(_('About'), '#')
            &bull;
            = link_to(_('Contact'), '#')

        .six.columns.align-right
          %p
            != _('With %s from Transilvania') % '<i class="general foundicon-heart heart"></i>'

          %p 2012&ndash;2013 &copy; The Courseware Project

    :javascript
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-28875212-2']);
      _gaq.push(['_trackPageview']);

      (function() {
       var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
       ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
       var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
       })();
